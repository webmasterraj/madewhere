{
    "manifest_version": 3,
    "version": "1.4",
    "name": "Made in Where",
    "description": "Shows the country where an Amazon product comes from so you can make an informed purchase.",
    "author":"madewherehelp@gmail.com",
    "permissions": [
        "scripting",
        "storage",
        "unlimitedStorage"
    ],
    "host_permissions": [
        "<all_urls>",
        "*://*/*"
    ],
    "action": {
        "default_title": "Made in Where"
    },
    "background": {
        "service_worker": "js/background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}